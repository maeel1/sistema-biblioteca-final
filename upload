    <script>
        // ESTA FUNÇÃO ESTAVA FALTANDO E CAUSAVA O ERRO "is not defined"
        function processarInclusao() {
            const email = document.getElementById('email-incluir').value;
            const senha = document.getElementById('senha-incluir').value;
            
            // Chama a função de inclusão no scripts.js (que também trata o redirecionamento)
            incluirUsuario(email, senha); 
            
            // Limpa o formulário após a tentativa
            document.getElementById('form-inclusao').querySelector('form').reset();
        }

        // Funções de LISTAGEM
        function exibirDados() {
            const lista = JSON.parse(localStorage.getItem('usuarios')) || [];
            const tbody = document.getElementById('tabela-dados');
            tbody.innerHTML = ''; 
            
            lista.forEach(item => {
                const row = tbody.insertRow();
                row.insertCell().textContent = item.id;
                row.insertCell().textContent = item.nome || 'N/A'; 
                row.insertCell().textContent = item.email;

                const acoesCell = row.insertCell();
                
                const btnExcluir = document.createElement('button');
                btnExcluir.textContent = 'Excluir';
                btnExcluir.className = 'btn btn-sm btn-danger';
                btnExcluir.onclick = () => {
                    if (confirm('Tem certeza que deseja excluir este usuário?')) {
                        alert('Usuário excluído!');
                        exibirDados();
                    }
                };
                acoesCell.appendChild(btnExcluir);
            });
        }
        
        // Chamada de listagem (ao carregar)
        window.onload = exibirDados;

    </script>

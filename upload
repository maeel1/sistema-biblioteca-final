    <script>
        // Funções Específicas de Processamento e Listagem
        
        function processarInclusaoLivro() {
            const titulo = document.getElementById('titulo-incluir').value;
            const autor = document.getElementById('autor-incluir').value;
            
            // Chama a função global no scripts.js
            incluirLivro(titulo, autor); 
            
            // Atualiza a lista e limpa o formulário
            exibirDadosLivros();
            document.getElementById('form-inclusao').querySelector('form').reset();
        }

        // Função de Listagem
        function exibirDadosLivros() {
            const lista = JSON.parse(localStorage.getItem('livros')) || [];
            const tbody = document.getElementById('tabela-dados-livros');
            tbody.innerHTML = ''; 
            
            lista.forEach((item, index) => {
                const row = tbody.insertRow();
                row.insertCell().textContent = item.id;
                row.insertCell().textContent = item.titulo;
                row.insertCell().textContent = item.autor;

                const acoesCell = row.insertCell();
                
                // Excluir (a função de exclusão precisa ser genérica, mas aqui faremos um alerta)
                const btnExcluir = document.createElement('button');
                btnExcluir.textContent = 'Excluir';
                btnExcluir.className = 'btn btn-sm btn-danger';
                btnExcluir.onclick = () => {
                    if (confirm(`Tem certeza que deseja excluir o livro "${item.titulo}"?`)) {
                        
                        // Lógica de exclusão simplificada (Remoção do local storage)
                        lista.splice(index, 1);
                        localStorage.setItem('livros', JSON.stringify(lista));
                        alert('Livro excluído!');
                        
                        exibirDadosLivros(); // Atualiza a lista
                    }
                };
                acoesCell.appendChild(btnExcluir);
            });
        }
        
        // Chamada de listagem ao carregar a página
        window.onload = exibirDadosLivros;

    </script>
